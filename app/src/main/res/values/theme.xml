<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Preference Compat-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:activatedBackgroundIndicator">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase" />

    <style name="AppTheme.AppBarScrim">
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar.Home" />

    <style name="AppTheme.NoActionBar.AddShift" />

    <style name="AppTheme.NoActionBar.ViewShift" />

    <style name="AppTheme.NoActionBar.Statistics">
        <item name="android:windowBackground">@color/statistics_window_background</item>
    </style>
</resources>