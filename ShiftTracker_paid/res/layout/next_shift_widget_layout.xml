<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/next_shift_container"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="@drawable/appwidget_bg_clickable"
    android:paddingLeft="16dip"
    android:paddingRight="16dip">

    <TextView
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-light"
        android:textSize="22dip"
        android:textColor="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/pay"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:paddingRight="4dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:gravity="left"
            android:textSize="20dip"
            android:duplicateParentState="true"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/primary_text_disable_only_holo_light"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="14sp"
            android:duplicateParentState="true"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/secondary_text_holo_light"/>
    </LinearLayout>
</RelativeLayout>