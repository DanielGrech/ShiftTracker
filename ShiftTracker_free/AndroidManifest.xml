<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dgsd.android.ShiftTrackerFree"
    android:versionCode="1"
    android:versionName="1.0">

    <permission
        android:name="dgsd.permission.READ"
        android:permissionGroup="android.permission-group.PERSONAL_INFO"
        android:label="@string/read_permission_label"
        android:description="@string/read_permission_description"
        android:protectionLevel="signature"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="16"/>

    <application
        android:name="com.dgsd.android.ShiftTrackerFree.StFreeApp"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Theme.shift_tracker"
        android:backupAgent="com.dgsd.android.ShiftTracker.StBackupAgent">

        <meta-data android:name="com.google.android.backup.api_key"
                   android:value="AEdPqrEAAAAISod_tg7g3RdUibX-AbnFlAAdv6O9ieiQko6tjA" />

        <!-- Providers -->
        <provider
            android:permission="dgsd.permission.READ"
            android:authorities="com.dgsd.android.ShiftTrackerFree.Data.Provider"
            android:name="com.dgsd.android.ShiftTracker.Data.Provider"/>

        <!-- Services -->
        <service android:name="com.dgsd.android.ShiftTracker.Service.DbService" />

        <!-- Activities -->
        <activity
            android:name="com.dgsd.android.ShiftTracker.StartupActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.dgsd.android.ShiftTracker.MainActivity"/>
        <activity android:name="com.dgsd.android.ShiftTracker.AllInOneActivity"/>
        <activity android:name="com.dgsd.android.ShiftTracker.LicensesActivity" />
        <activity android:name="com.dgsd.android.ShiftTracker.SettingsActivity"/>
        <activity android:name="com.dgsd.android.ShiftTracker.EditShiftActivity" android:windowSoftInputMode="stateHidden"/>
    </application>
</manifest>
