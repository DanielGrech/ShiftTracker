<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dgsd.android.ShiftTracker"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="16"/>

    <application
        android:name=".StApp"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Theme.shift_tracker">

        <!-- Providers -->
        <provider
            android:authorities="com.dgsd.android.ShiftTracker.Data.Provider"
            android:multiprocess="false"
            android:name=".Data.Provider"/>

        <activity
            android:name="StartupActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"/>
        <activity android:name=".AllInOneActivity"/>
        <activity android:name=".SettingsActivity"/>
        <activity android:name=".EditShiftActivity"/>
    </application>
</manifest>
